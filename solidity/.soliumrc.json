{
    "extends": "solium:all",
    "plugins": [
        "security"
    ],
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "indentation": [
            "error",
            4
        ],
        "arg-overflow": [
            "warning",
            3
        ],
        "mixedcase": 0,
        "blank-lines": 0,
        "uppercase": 0,
        "lbrace": 0,
        "arg-overflow": 0,
        "security/no-block-members": 0
    }
}
